<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Giải hệ phương trình bậc 2"
    android:gravity="center"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/soA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hệ số A:"/>
    <TextView
        android:id="@+id/giatriA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/soB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hệ số B:"/>
        <TextView
            android:id="@+id/giatriB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/soC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hệ số C:"/>
        <TextView
            android:id="@+id/giatriC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/KetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả:"/>
        <TextView
            android:id="@+id/txt_Kq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_height="50dp"
        android:layout_width="70dp"
        android:layout_gravity="center"
        android:text="Trở về"
        android:background="#0095e1"
        android:textColor="#ffffff"
        ></Button>
</LinearLayout>